<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.isakgustafsson.stopwatchandtimer.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.isakgustafsson.stopwatchandtimer.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.isakgustafsson.stopwatchandtimer.app.ShowNotification"
            android:label="Display Notification" />

        <service
            android:name="com.isakgustafsson.stopwatchandtimer.app.TimerService"
            android:enabled="true"
            android:exported="false" >
        </service>
        <service
            android:name="com.isakgustafsson.stopwatchandtimer.app.StopWatchService"
            android:enabled="true"
            android:exported="false" >
        </service>
    </application>
</manifest>
